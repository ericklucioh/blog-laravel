Post:
  id: uuid
  status: [draft, public, private]
  category_id: uuid
  views: number
  reading_time: number
  tags: list<string>        # Lista de palavras-chave para busca e organização
  published_at: datetime
  updated_at: datetime
  deleted_at: datetime

PostTranslation:
  id: uuid
  post_id: uuid                 # referência ao Post
  language: string              # ex: "pt-BR", "en-US"

  title: string
  slug: string                  # unique por idioma
  excerpt: string
  content: string

  seo:
    title: string
    description: string
    image: string
    canonical: string

  created_at: datetime
  updated_at: datetime